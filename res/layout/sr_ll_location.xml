<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llSrLocation"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/PopWindowBg"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <ListView
        android:id="@+id/lvSrLocationListLeft"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/sr_pw_bottom"
        android:layout_marginLeft="@dimen/sr_pw_location_margin"
        android:layout_marginTop="@dimen/sr_pw_top"
        android:layout_weight="1"
        android:background="@color/white"
        android:divider="@null" >
    </ListView>

    <ListView
        android:id="@+id/lvSrLocationListRight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/sr_pw_bottom"
        android:layout_marginRight="@dimen/sr_pw_location_margin"
        android:layout_marginTop="@dimen/sr_pw_top"
        android:layout_weight="1"
        android:background="@color/Gray"
        android:divider="@null" >
    </ListView>

</LinearLayout>