<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".UsrInfoActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        
        android:background="@color/DodgerBlue"
        
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/personalpageback"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/myfood"
            android:layout_width="206dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我的美食"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/DodgerBlue"
            android:textSize="27sp" />

           <Button
               android:id="@+id/logoff"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@color/DodgerBlue"
               android:text="注销"
               android:textColor="@color/white"
               android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_weight="0.16"
        android:background="#F0F8FF"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/Userpic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dfuserpic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.74"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/Username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="账号:"
                    android:textSize="23sp" 
                    android:textColor="@color/DodgerBlue">
                </TextView>

                <TextView
                    android:id="@+id/ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                  
                    android:textColor="@color/DodgerBlue"
                    android:textSize="23sp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码修改"
                    android:textColor="@color/DodgerBlue"
                    android:textSize="23dp" />

                <ImageButton
                    android:id="@+id/passwordchange"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/pswc" 
                    
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/myfavourite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_marginTop="5dp"
        android:layout_weight="0.10"
        android:background="#F0F8FF"
        android:gravity="left|center"
        android:text="  我的收藏"
        android:textColor="@color/DodgerBlue"
        android:textSize="20dp" >

    </TextView>

    <com.foomap.view.SwipeListView
        android:id="@+id/restauran_lv_list"
        android:layout_width="match_parent"
        android:layout_height="240dp"
      android:background="#FFEFDB"
        android:layout_weight="0.23"
        android:listSelector="#00000000"
        swipe:swipeActionLeft="reveal"
        swipe:swipeActionRight="reveal"
        swipe:swipeAnimationTime="0"
        swipe:swipeBackView="@+id/back"
        swipe:swipeCloseAllItemsWhenMoveList="true"
        swipe:swipeFrontView="@+id/front"
        swipe:swipeMode="both"
        swipe:swipeOffsetLeft="0dp"
        swipe:swipeOffsetRight="0dp"
        swipe:swipeOpenOnLongPress="false" >
    </com.foomap.view.SwipeListView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:background="#F0F8FF"
    android:gravity="right" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="草稿箱"
        android:textColor="@color/softGreen"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/draft"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/papercan" />
    
</LinearLayout>

</LinearLayout>