<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>

            <!-- 渐变 -->
            <gradient android:endColor="@color/oriange" android:startColor="@color/oriange" />

            <corners android:radius="5dp" />

            <padding android:bottom="3dp" android:left="5dp" android:right="5dp" android:top="3dp" />
        </shape></item>
    <item android:state_pressed="false"><shape>

            <!-- 渐变 -->
            <gradient android:endColor="@color/white" android:startColor="@color/white" />

            <corners android:radius="5dp" />

            <padding android:bottom="3dp" android:left="5dp" android:right="5dp" android:top="3dp" />
        </shape></item>

</selector>